{% set main_menu = 'banner' %}

{% extends app.request.query.get('isModal')|default(false) ? "NfqAdminBundle::modal.html.twig" : "NfqAdminBundle::layout.html.twig" %}

{% form_theme delete_form 'NfqAdminBundle::form.html.twig' %}

{% if app.request.query.get('isModal') %}
    {% block title %}
        {{ entity.getTitle }} - {{ 'banner.remove'|trans }}
    {% endblock %}
{% endif %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            {{ 'banner.remove_text'|trans }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-offset-8 col-sm-4">
            {{ form(delete_form) }}
        </div>
    </div>
{% endblock %}
